<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>meizitu</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<!-- 查询girl列表 -->
	<servlet>
		<servlet-name>girllist</servlet-name>
		<servlet-class>com.kubeiwu.servlet.GirlListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>girllist</servlet-name>
		<url-pattern>/girllist</url-pattern>
	</servlet-mapping>
	<!-- 查询girl详情 -->
	<servlet>
		<servlet-name>girlinfo</servlet-name>
		<servlet-class>com.kubeiwu.servlet.GirlDetailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>girlinfo</servlet-name>
		<url-pattern>/girlinfo</url-pattern>
	</servlet-mapping>
	<!-- 登陆 -->
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.kubeiwu.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- 添加数据 -->
	<servlet>
		<servlet-name>savegirlinfo</servlet-name>
		<servlet-class>com.kubeiwu.servlet.InsertGirlInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>savegirlinfo</servlet-name>
		<url-pattern>/savegirlinfo</url-pattern>
	</servlet-mapping>
	<!-- 类型列表 -->
	<servlet>
		<servlet-name>categoryList</servlet-name>
		<servlet-class>com.kubeiwu.servlet.CategoryListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>categoryList</servlet-name>
		<url-pattern>/categoryList</url-pattern>
	</servlet-mapping>

</web-app>